<section class="user-form">

 <!--  <img src="https://s3.amazonaws.com/cbgriffin/banner.png" class="banner"> -->

 <%= image_tag 'banner_sign_up.png', :class => "reset_banner" %>

  <%= form_tag(users_url, method: 'post', multipart: true) do %>

      <%= text_field_tag :first_name, nil, placeholder: "First name" %>

      <%= text_field_tag :last_name, nil, placeholder: "Last name" %>

      <%= text_field_tag :email, nil, placeholder: "Email address", class: "field-check" %>

        <p class="warning">*Your e-mail doesnt look right...</p>

      <%= text_field_tag :username, nil, placeholder: "Username", class: "field-check" %>

        <p class="warning">*This is not a valid username...</p>


      <%= text_field_tag :password, nil, placeholder: "Password", class: "field-check" %>

        <p class="warning">*This is not a valid password...</p>


      <%= text_field_tag :password_confirmation, nil, placeholder: "Confirm your password" %>


      <%= label_tag :birthday %><br />
      <%= text_field_tag :birthday %>


      <%= label_tag :avatar %><br />
      <%= file_field_tag :avatar %>


      <%= submit_tag "Create User" %>
  <% end %>

</section>



